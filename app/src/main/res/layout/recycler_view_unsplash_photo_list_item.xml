<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/unsplash_photo_image_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/unsplash_photo_height"
        android:contentDescription="@string/list_item_unsplash_photo"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/unsplash_user_name_text_view"
        style="@style/Widget.ImagesEra.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/unsplash_photo_image_view"
        app:layout_constraintEnd_toEndOf="@id/unsplash_photo_image_view"
        app:layout_constraintStart_toStartOf="@+id/unsplash_photo_image_view"
        tools:text="TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>